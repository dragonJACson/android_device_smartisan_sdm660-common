cp $ANDROID_BUILD_TOP/device/smartisan/sdm660-common/prebuilt/bin/deunify.sh out/

function ensure_file() {
  if [ -f z2/$1 ]; then
    mkdir -p out/$(dirname $1)
    mv -f z2/$1 out/$1
    rm -f z1/$1
  fi
}

ensure_file system/vendor/etc/permissions/android.hardware.nfc.hce.xml
ensure_file system/vendor/etc/permissions/android.hardware.nfc.hcef.xml
ensure_file system/vendor/etc/permissions/android.hardware.nfc.xml
ensure_file system/vendor/etc/permissions/com.android.nfc_extras.xml
ensure_file system/vendor/etc/permissions/com.nxp.mifare.xml
ensure_file system/vendor/etc/init/vendor.nxp.hardware.nfc@1.1-service.rc
